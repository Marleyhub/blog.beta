{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h3>Nova postagem:</h3>
<div class="card">
    <div class="card-body">
<form action="/admin/postagem/nova" method="post">
<label for="name">Titulo:</label> 
<input type="text"  name="titulo" placeholder="Nome da postagem" class="form-control">
<label for="slug">Slug:</label>
<input type="text"  name="slug" placeholder="Slug da postagem" class="form-control">
<label for="descricao">Descrição:</label>
<input type="text"  name="descricao" placeholder="descriçao da postagem" class="form-control">
<label for="conteudo">Conteúdo:</label>
<textarea  name="conteudo" placeholder="descriçao do conteúdo" class="form-control"></textarea>
<label for="categoria">Categorias:</label>
    <select name="categoria" class="form-control">
        {{#each categoria}}
       <option value="{{_id}}">{{nome}}</option>>
        {{else}}
         <option value="0">Nenhuma categoria registrada:</option>
        {{/each}}
    </select>   
<br>
<button type="submit" class="btn btn-success mt-4">Criar postagem</button>  
</form>
    </div>
</div>