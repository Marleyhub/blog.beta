<h2>Lista de postagens:</h2>
<hr>
<!-- chamando a url criada na paginas de rotas -->
<a href="/admin/postagem/add"><button class="btn btn-success">Nova postagem</button></a> <!-- sempre iniciar com a "/" se não ele vai enter como uma rota e não como um arquivo-->

 
<div class="card mt-4">
    <div class="card-body">
      {{#each postagens}}
        <h3>{{titulo}}</h3>  
        <small>{{data}}</small> 
        <p>{{descricao}}</p> 
        <p>{{categoria.nome}}</p>
        <p>{{conteudo}}</p> 
        <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-4">Editar</button></a><br>
        <a href="/admin/postagens/delete/{{_id}}"><button class="btn btn-danger mt-4">Deletar</button>></a>
        <input type="hidden" name="id" value="{{_id}}">
        <hr>
        
        {{else}}
          Nenhuma postagem listada!
        {{/each}}
    </div>
</div>
